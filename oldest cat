class Cat:
    species = 'mammal'
    def __init__(self, name, age):
        self.name = name
        self.age = age
cat1 = Cat("tom",10)
cat2 = Cat("jerry",11)
cat3 = Cat("miss",9)

def oldest_cat(*args):
    return max(args)

print(f"the oldest cat is {oldest_cat(cat1.age,cat2.age,cat3.age)} years old.")
